<div id="data-user" get-data="<%= dataUser %>"></div>
<div id="data-service" get-data="<%= dataService %>"></div>
<div id="data-franchise" get-data="<%= dataFranchise %>"></div>


<div class="container">
    <h1>Spa Reservation</h1>
    <form id="reservationForm">
        <label for="name">Full Name:</label>
        <input type="text" id="name" name="name" value="<%= dataUser.Name %>" required>

        <label for="date">Select Date:</label>
        <input type="date" id="date" name="date" required>

        <label for="service">Select Service:</label>
        <select id="service" name="service" required>
            <option value="">--Choose a Service--</option>
            <option value="spa">Spa</option>
            <option value="body-massage">Body Massage</option>
            <option value="refleksi">Refleksi</option>
        </select>

        <!-- Additional Options for Spa -->
        <div id="spa-options" class="hidden">
            <label for="masker">Choose Masker:</label>
            <select id="masker" name="masker">
                <option value="">--Choose a Masker--</option>
                <option value="strawberry">Strawberry</option>
                <option value="coklat">Coklat</option>
                <option value="kopi">Kopi</option>
                <option value="milk">Milk</option>
                <option value="boreh">Boreh</option>
                <option value="sandalwood">Sandalwood</option>
                <option value="alpukat">Alpukat</option>
            </select>

            <label for="scrub">Choose Scrub:</label>
            <select id="scrub" name="scrub">
                <option value="">--Choose a Scrub--</option>
                <option value="strawberry">Strawberry</option>
                <option value="coklat">Coklat</option>
                <option value="kopi">Kopi</option>
                <option value="milk">Milk</option>
                <option value="boreh">Boreh</option>
                <option value="sandalwood">Sandalwood</option>
                <option value="alpukat">Alpukat</option>
            </select>
        </div>

        <!-- Additional Options for Body Massage -->
        <div id="massage-options" class="hidden">
            <label for="oil">Choose Massage Oil:</label>
            <select id="oil" name="oil">
                <option value="">--Choose a Massage Oil--</option>
                <option value="rose">Rose</option>
                <option value="jasmine">Jasmine</option>
                <option value="sandalwood">Sandalwood</option>
                <option value="lemongrass">Lemongrass</option>
                <option value="lavender">Lavender</option>
                <option value="frangipani">Frangipani</option>
            </select>
        </div>

        <label for="branch">Choose BaliHalus Branch:</label>
        <select id="branch" name="branch" required>
            <option value="">--Choose a Branch--</option>
            <option value="bali-1">BaliHalus - Ubud</option>
            <option value="bali-2">BaliHalus - Seminyak</option>
            <option value="bali-3">BaliHalus - Kuta</option>
        </select>

        <button type="submit" class="submit-btn">Reserve Now</button>
    </form>

    <div id="confirmation" class="hidden">
        <h2>Reservation Confirmed</h2>
        <p id="confirmationDetails"></p>
    </div>
</div>
